<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.cibertec.sharedpreferences.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/txtUsuario_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usuario"/>
        <EditText
            android:id="@+id/txtClave_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/clave"/>
        <CheckBox
            android:id="@+id/chkRecordarme_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recordarme"/>
        <Button
            android:id="@+id/btnIngresar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/iniciar_sesion"/>
    </LinearLayout>
</RelativeLayout>
